@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Review>;

<h1>Reviews</h1>

@if (@Model.Count == 0)
{
  <h3>No Reviews have been added yet!</h3>
} 

@foreach (Review review in Model)
{
  //<!-- <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Name</li> -->
  <li>@Html.ActionLink($"{review.Title}", "Details", new { id = review.ReviewId }) | @review.Restaurant.Name</li>
}

<p>@Html.ActionLink("Add new review", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>